<header class="header">
  <h2 class="title"><a href="/">Tasks Tracker</a></h2>
  <div class="header__container">
    <% if(user){ %>
    <div class="box">
      <div class="dropdown">
        <%=user.username%>
        <p>Hi, <%=user.fullname%></p>
        <a href="/users/delete">Delete Account</a>
      </div>
    </div>
    <% } %>
    <ul class="nav__links">
      <% if(user) { %>
      <li><a href="/logout">Logout</a></li>
      <% } else { %>
      <li><a href="/login">Login</a></li>
      <li><a href="/signup" class="btn btn--signup">Signup</a></li>
      <% } %>
    </ul>
  </div>
</header>
